{
  "manifest_version": 3,
  "name": "AI Content Detector",
  "version": "2.0",
  "description": "Detects the likelihood that webpage content has been generated by AI using advanced detection APIs",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.gptzero.me/*",
    "https://api.originality.ai/*",
    "https://api.copyleaks.com/*",
    "https://api.sapling.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Content Detector"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}